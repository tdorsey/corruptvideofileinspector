# Development Dockerfile for corrupt-video-inspector

FROM python:3.13-slim

# Install system dependencies and build tools for Poetry and C extensions
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    build-essential \
    python3-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Rust for packages that need Rust compilation (dev dependencies)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set workdir
WORKDIR /app

# Install Poetry and upgrade pip
RUN pip install --upgrade pip && pip install poetry

# Copy pyproject.toml, poetry.lock, README.md, and src for editable install
COPY pyproject.toml poetry.lock README.md ./
COPY src ./src

# Install all dependencies including dev dependencies
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi

# Copy entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Entrypoint for dev (can be overridden)
ENTRYPOINT ["/entrypoint.sh"]

# Default command: start a shell
CMD ["bash"]
