# Development Dockerfile for corrupt-video-inspector

FROM python:3.11-slim

# Install system dependencies and build tools for Poetry and C extensions
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Set workdir
WORKDIR /app

# Install Poetry
RUN pip install poetry



# Copy pyproject.toml, poetry.lock, README.md, and src for editable install
COPY pyproject.toml poetry.lock README.md ./
COPY src ./src

# Install dependencies (no root user for dev)
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi

# Copy entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Entrypoint for dev (can be overridden)
ENTRYPOINT ["/entrypoint.sh"]

# Default command: start a shell
CMD ["bash"]
